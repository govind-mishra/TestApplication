@model RssFeedViewModel
@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 p-5">
            <form enctype="multipart/form-data" asp-controller="home" method="post" class="mt-3">
                <div class="card border-primary rounded-0">
                    <div class="card-header p-0">
                        <div class="bg-info text-white text-center py-2">
                            <h3><i class="fa fa-rss"></i> Read RSS</h3>
                        </div>
                    </div>
                    <div class="card-body p-3">

                        <!--Body-->
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa-link" style="color: #17a2b8"></i></div>
                                </div>
                                <input type="text" class="form-control" asp-for="RSSFeedURl" placeholder="RSS Link" required>
                            </div>
                        </div>
                        <h3 class="text-center">OR</h3>
                        <div class="form-group">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fa fa-file-upload text-info"></i></div>
                                </div>
                                <input asp-for="CSVFile" class="form-control custom-file-input" />
                                <label class="custom-file-label">Choose File</label>
                            </div>
                        </div>

                        <div class="text-center">
                            <input type="submit" value="Read RSS" class="btn btn-info btn-block rounded-0 py-2">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    @section Scripts{
        <script>
            $(document).ready(function () {
                var $inputs = $('input[name=RSSFeedURl],input[name=CSVFile]');
                $inputs.on('input', function () {
                    // Set the required property of the other input to false if this input is not empty.
                    $inputs.not(this).prop('required', !$(this).val().length);
                });

                $('.custom-file-input').on('change', function () {
                    debugger;
                    var fileName = $(this).val().split('\\').pop();
                    $(this).next('.custom-file-label').html(fileName);
                })
            })
        </script>

    }
</div>