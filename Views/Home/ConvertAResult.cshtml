@model IEnumerable<FeedArticlesAndDetail>

@{
    ViewBag.Title = "ConvertAResult";

}

<div class="row row-flex">
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
        <div class="rss-table pt-bg-black">
            <div>
                <span>Title</span>
                <span>Trimmed After 10 chars!</span>
            </div>
            <ul>
                @foreach (var article in Model)
                {
                  <li >@article.ArticleTitle</li>
                }
            </ul>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
        <div class="rss-table pt-bg-green">
            <div>
                <span>Body</span>
                <span>Trimmed After 10 chars!</span>
            </div>
            <ul>
                @foreach (var article in Model)
                {
                    <li>@article.ArticleBody</li>
                }
            </ul>
        </div>
    </div>


</div>
